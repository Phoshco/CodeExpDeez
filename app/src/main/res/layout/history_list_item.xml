<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4sp"
    android:padding="10dp"
    android:background="@drawable/box"
    android:elevation="10dp"
    >

    <TextView
        android:id="@+id/hitemname"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/itemname"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hprice_value"
        />


    <TextView
        android:id="@+id/hprice_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:scrollHorizontally="true"
        android:text="@string/price"
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hitemname" />
    <TextView
        android:id="@+id/hcollect_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:scrollHorizontally="true"
        android:text="collection time"
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hprice_value" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:scrollHorizontally="true"
        android:text="Size: "
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/hitemname"
        app:layout_constraintTop_toTopOf="@id/hitemname"

        />

    <TextView
        android:id="@+id/hsize_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="test"
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/textViewSize"
        app:layout_constraintTop_toTopOf="@id/hitemname"
        />

    <TextView
        android:id="@+id/textViewColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:scrollHorizontally="true"
        android:text="Colour: "
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSize"
        app:layout_constraintLeft_toLeftOf="@id/textViewSize"
        />

    <TextView
        android:id="@+id/hcolour_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="test"
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/hsize_value"
        app:layout_constraintLeft_toRightOf="@id/textViewColour"
        />


    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:scrollHorizontally="true"
        android:text="Quantity: "
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/textViewColour"
        app:layout_constraintLeft_toLeftOf="@id/textViewColour"
        />

    <TextView
        android:id="@+id/hquantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="test"
        android:textColor="@color/cardview_dark_background"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/hcolour_value"
        app:layout_constraintLeft_toRightOf="@id/textViewQuantity"
        />







</androidx.constraintlayout.widget.ConstraintLayout>