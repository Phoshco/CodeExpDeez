    <EditText
        android:id="@+id/announcement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter announcement title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/box"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"


        />

    <EditText
        android:id="@+id/announcement_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter message here"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/announcement_title"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addAnnouncement"
        android:text="Add announcement"
        android:background="@drawable/buttons"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/announcement_message"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

